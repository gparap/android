<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_activity_all_transactions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AllTransactionsActivity">

    <!--Placeholder for app logo-->
    <include
        android:id="@+id/layout_appLogoWithSectionTitle"
        layout="@layout/layout_app_logo_with_section_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Placeholder for all transactions-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_allTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_appLogoWithSectionTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>