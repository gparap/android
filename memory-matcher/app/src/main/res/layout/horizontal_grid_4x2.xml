<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/grid_layout_margin_land"
    android:background="@color/gray_light"
    android:padding="@dimen/grid_padding_land"
    app:columnCount="4"
    app:orientation="horizontal"
    app:rowCount="2">

    <!-- Row 0, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_0_col_0"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 0, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_0_col_1"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 0, Column 2 -->
    <ImageView
        android:id="@+id/grid_row_0_col_2"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 0, Column 3 -->
    <ImageView
        android:id="@+id/grid_row_0_col_3"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 1, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_1_col_0"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1" />

    <!-- Row 1, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_1_col_1"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1" />

    <!-- Row 1, Column 2 -->
    <ImageView
        android:id="@+id/grid_row_1_col_2"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="1" />

    <!-- Row 1, Column 3 -->
    <ImageView
        android:id="@+id/grid_row_1_col_3"
        style="@style/memory_card_4x2"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="1" />

</androidx.gridlayout.widget.GridLayout>
