<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/grid_layout_margin"
    android:background="@color/gray_light"
    android:padding="@dimen/grid_padding"
    app:columnCount="2"
    app:orientation="horizontal"
    app:rowCount="4">

    <!-- Row 0, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_0_col_0"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 0, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_0_col_1"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="0" />

    <!-- Row 1, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_1_col_0"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1" />

    <!-- Row 1, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_1_col_1"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1" />

    <!-- Row 2, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_2_col_0"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2" />

    <!-- Row 2, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_2_col_1"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2" />

    <!-- Row 3, Column 0 -->
    <ImageView
        android:id="@+id/grid_row_3_col_0"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="3" />

    <!-- Row 3, Column 1 -->
    <ImageView
        android:id="@+id/grid_row_3_col_1"
        style="@style/memory_card_2x4"
        android:contentDescription="@string/desc_memory_card"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="3" />

</androidx.gridlayout.widget.GridLayout>
