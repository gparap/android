<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".ui.SplashActivity">

    <!--Zodiac signs png-->
    <ImageView
        android:id="@+id/imageViewZodiac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/desc_zodiac_signs_image"
        app:layout_constraintBottom_toTopOf="@+id/imageViewLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAppName"
        app:srcCompat="@drawable/splash" />

    <!--Logo png-->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/imageViewLogo_layout_width"
        android:layout_height="@dimen/imageViewLogo_layout_height"
        android:contentDescription="@string/desc_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <!--App name text-->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="0dp"
        android:layout_height="@dimen/textViewAppName_layout_height"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/textViewAppName_textSize"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>