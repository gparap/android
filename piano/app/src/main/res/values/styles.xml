<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Natural notes button style-->
    <style name="piano_button_white">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">onWhiteButtonClick</item>
    </style>

    <!--Sharp notes button style-->
    <style name="piano_button_black">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:elevation">2dp</item>
        <item name="android:onClick">onBlackButtonClick</item>
    </style>
</resources>