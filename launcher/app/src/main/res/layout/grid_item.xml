<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_grid_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Container for app launcher icon-->
    <ImageView
        android:id="@+id/image_view_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/desc_app_launcher_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:src="@mipmap/ic_launcher" />

    <!--Container for app launcher title-->
    <TextView
        android:id="@+id/text_view_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/image_view_app_icon"
        app:layout_constraintStart_toStartOf="@+id/image_view_app_icon"
        app:layout_constraintTop_toBottomOf="@+id/image_view_app_icon"
        tools:text="App Title" />

</androidx.constraintlayout.widget.ConstraintLayout>