<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BinaryConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornsilk_500</item>
        <item name="colorPrimaryVariant">@color/cornsilk_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Action bar color. -->
        <item name="actionBarTheme">@style/ThemeActionBar</item>
    </style>

    <!-- Action bar theme. -->
    <style name="ThemeActionBar" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/cornsilk_500</item>
    </style>

</resources>